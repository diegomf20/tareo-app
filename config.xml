<?xml version='1.0' encoding='utf-8'?>
<widget id="io.diegomf20.tareo" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AppTareo</name>
    <description>
        Aplicaci√≥n para control de asistencia y tareo en campo.
    </description>
    <author email="diegomf.mendoza@gmail.com">
        Diego MF Desarrollos
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="src/icon.png" width="57" height="57" density="mdpi"/>
        <preference name="loadUrlTimeoutValue" value="700000" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge"  target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
            <application android:networkSecurityConfig="@xml/network_security_config" />
            <application android:usesCleartextTraffic="true" />
        </edit-config>
        <resource-file src="network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
